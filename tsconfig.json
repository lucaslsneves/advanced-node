{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target" : "ES2019",
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*" : ["*"],
      "@/tests/*": ["../tests/*"]
    }
  },
  "include": ["src"]
}
